[respondd]
enable           = true
collect_interval = "2m"
synchronize      = "2m"


[[respondd.interfaces]]
ifname = "bat07"
port = 10001
ip_address = "2a03:2260:3017:700::4"
# default
multicast_address = "ff02::2:1001"
# or
#multicast_address = "ff05::2:1001"
#send_no_request = true


[webserver]
enable  = true
bind    = "212.129.7.246:80"
webroot = "/var/www/html/meshviewer/data"

[nodes]
state_path     = "/var/lib/yanic/07_yanic.json"
prune_after    = "7d"
save_interval  = "5s"
offline_after  = "10m"

[[nodes.output.nodelist]]
enable = true
path = "/var/www/html/meshviewer/data/07_nodelist.json"
[nodes.output.nodelist.filter]
#no_owner = false

[[nodes.output.meshviewer-ffrgb]]
enable  = true
path    = "/var/www/html/meshviewer/data/07_meshviewer.json"

[nodes.output.meshviewer-ffrgb.filter]
no_owner = true
blacklist = []
sites = ["su-su","su-sa","su-lo","su-mck","su-rhb","su-snw","su-ak","su-mck","su-nk"]
#has_location = true

#[nodes.output.meshviewer-ffrgb.filter.in_area]
#latitude_min = 34.30
#latitude_max = 71.85
#longitude_min = -24.96
#longitude_max = 39.72

[[nodes.output.meshviewer]]
enable         = true
version        = 2
nodes_path     = "/var/www/html/meshviewer/data/07_nodes.json"
graph_path     = "/var/www/html/meshviewer/data/07_graph.json"

[nodes.output.meshviewer.filter]
no_owner = true


[database]
delete_after = "7d"
delete_interval = "1h"

[[database.connection.influxdb]]
enable   = false
address  = "http://195.201.17.35:8086"
database = "ffsu"
username = ""
password = ""

[database.connection.influxdb.tags]

[[database.connection.graphite]]
enable   = false
address  = "localhost:2003"
prefix   = "freifunk"

[[database.connection.respondd]]
enable   = false
type     = "udp6"
address  = "[ipv6]:10001"

[[database.connection.logging]]
enable   = false
path = "/var/log/07_yanic.log"
